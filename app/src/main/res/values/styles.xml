<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/primary_material_light</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/primary_text_material_light</item>
        <item name="android:windowBackground">@color/material_deep_teal_200</item>
        <item name="android:colorBackground">@color/material_deep_teal_200</item>
    </style>



    <style name="FullscreenActionBarStyle" parent="android:Widget.Material.ActionBar.Solid">
        <item name="android:background">@color/material_deep_teal_200</item>
    </style>

    <style name="testgrey" parent="android:Theme.Material.Light.NoActionBar" >
        <item name="android:colorPrimary">@android:color/darker_gray</item>
    </style>

</resources>
